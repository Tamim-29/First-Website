  <script>
    // small enhancements
    document.getElementById('year').textContent = new Date().getFullYear();

    // simple contact form behavior: open mailto with subject/body if the browser supports it
    const form = document.querySelector('form#contact');
    if(form){
      form.addEventListener('submit', (e)=>{
        e.preventDefault();
        const subject = encodeURIComponent(form.subject.value || 'Hello from your website');
        const body = encodeURIComponent(form.body.value || 'Hi Tamim, I\'d like to connect...');
        const mail = `mailto:tamim@example.com?subject=${subject}&body=${body}`;
        window.location.href = mail;
      });
    }
  </script>
